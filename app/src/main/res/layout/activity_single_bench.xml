<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8e4bc"
    tools:context=".SingleBenchActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <include layout="@layout/toolbar" />

            <!-- Bench Title -->
            <TextView
                android:id="@+id/bench_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Title"
                android:textColor="#632240"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>

            <!-- Bench Photo Section (Main Image + Gallery Button) -->
            <ImageView
                android:id="@+id/bench_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_logo_icon_only"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/view_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View More Photos"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#632240"
                android:textColor="#FFFFFF"/>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <!-- Map Fragment -->
            <fragment
                android:id="@+id/map_fragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="20dp"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp" />

            <!-- Rating Bar -->
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="0"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/rate_bench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add your rating"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#632240"
                android:textColor="#FFFFFF"/>


            <!-- Bench Attributes -->
            <LinearLayout
                android:id="@+id/attributes_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="It's shaded!" />
                    <Switch
                        android:id="@+id/switch_shade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:checked="false"
                        android:enabled="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The street is quiet!" />
                    <Switch
                        android:id="@+id/switch_noise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:checked="false"
                        android:enabled="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="There's coffee nearby!" />
                    <Switch
                        android:id="@+id/switch_cafe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:checked="false"
                        android:enabled="false"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu_new"
        app:headerLayout="@layout/nav_header"/>
</androidx.drawerlayout.widget.DrawerLayout>
